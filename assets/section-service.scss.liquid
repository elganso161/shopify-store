.container {
  width: 1024px;
  margin: 0 auto;
  @media screen and(max-width:1050px) {
    width: 95%;
  }
}

.service {
  width: 100%;
  padding-bottom: 50px;
  background-color: rgba(249, 208, 35, 1);
  .service__title {
    padding-top: 100px;
    font-family: 'Alata';
    font-style: normal;
    font-weight: 400;
    font-size: 90px;
    line-height: 100px;
    color: #0b0d21;
    position: relative;
    &::before {
      position: absolute;
      content: '';
      top: 235px;
      left: 0;
      z-index: 1;
      width: 100px;
      height: 6px;
      background: #fff;
    }
  }

  .service__text {
    font-family: 'Sofia Pro';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 26px;
    color: #0b0d21;
    max-width: 920px;
  }

  .service__list {
    padding: 0;
    margin-bottom: 60px;
    display: flex;

    justify-content: space-between;
    .service__list-item {

      width: 30%;
      list-style: none;
      .service__list-title {
        font-family: 'Sofia Pro';
        font-style: normal;
        font-weight: 700;
        font-size: 40px;
        line-height: 48px;
        color: #0b0d21;
      }

      .arrow-icon{
        margin-left: 40px;
      }
    }

    .service__sublist{
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 35px;
        .service__sublist-item{
            list-style: none;
            font-family: 'Sofia Pro';
            font-style: normal;
            font-weight: 400;
            font-size: 18px;
            line-height: 26px;
            color: #0B0D21;
            position: relative;
            &:before{
                position: absolute;
                content: "";
                top: 9px;
                left: -35px;
                z-index: 1;
                width: 6px;
                height: 6px;
                background: #FFFFFF;
            }
        }
    }
    @media screen and (max-width:960px) {
        flex-wrap: wrap;
        .service__list-item {
            width: 100%;
            .service__list-title {
                text-align: center;
            }
        }
    }
  }

  .service__bottom-text{
    font-family: 'Sofia Pro';
    font-style: normal;
    font-weight: 400;
    font-size: 18px;
    line-height: 26px;
    color: #0b0d21;
    max-width: 920px;
  }
}
